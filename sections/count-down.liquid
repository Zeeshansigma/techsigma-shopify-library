<style>
  .countdown-section .countdown-heading{
    color: var(--Black, #1F1F1F);
text-align: center;
font-family: Montserrat;
font-size: 12px;
font-style: normal;
font-weight: 700;
line-height: 110%; /* 13.2px */
letter-spacing: -0.24px;
  }

 .countdown-section {
    display: flex;
    padding: 16px;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    align-self: stretch;
    border-radius: 20px;
    border: 1px solid var(--purple-20, rgba(98, 25, 250, 0.20));
    background: var(--purple-5, rgba(98, 25, 250, 0.05));
}

  .container.countdown {
  color: #333;
  margin: 0 auto;
  text-align: center;
}



#countdown li {
  display: inline-block;
  font-size: 1.5em;
  list-style-type: none;
  padding: 1em;
  text-transform: uppercase;
}

#countdown li span {
  display: block;
  font-size: 4.5rem;
}


@media all and (max-width: 768px) {
  
  #countdown li {
    font-size: calc(1.125rem * var(--smaller));
  }
  
  #countdown li span {
    font-size: calc(3.375rem * var(--smaller));
  }
}

#countdown ul{
    display: flex;
    text-align: center;
    justify-content: center;
}
  #countdown li{
    display: flex;
    padding: 10px 5px;
    width: 52px;
    justify-content: center;
    align-items: center;
    /* gap: 8px; */
    border-right: 0.5px solid var(--purple-20, rgba(98, 25, 250, 0.20));
    background: var(--White, #FEFEFE);
    flex-direction: column;
}
  .timer span{
    color: var(--electronic-indigo, #6219FA);
text-align: center;
leading-trim: both;
text-edge: cap;
font-family: Montserrat;
font-size: 16px !important;
font-style: normal;
font-weight: 700;
line-height: 12.5px; /* 78.125% */
  }

  .countdown-section .countdown-text{
    color: var(--Black, #1F1F1F);
text-align: center;
font-family: Montserrat;
font-size: 10px;
font-style: normal;
font-weight: 500;
line-height: 110%; /* 11px */
letter-spacing: -0.2px;
margin-bottom: auto;
  }
.regular-countdown{
  display: none;
}
</style>

<section class="countdown-section test{{ template.suffix }}{% if template.suffix == 'regular-product' %} regular-countdown {% endif %}">
  <h2 class="countdown-heading">Pre-order now for the Best Price!</h2>
  <div class="container countdown">
  <div id="countdown">
   
      <ul>
         
      <li class="timer"><span id="days"></span>days</li>
      <li class="timer"><span id="hours"></span>Hours</li>
      <li class="timer"><span id="minutes"></span>Minutes</li>
      <li class="timer"><span id="seconds"></span>Seconds</li>
           
    </ul>
   
  </div>
  
</div>
  <p class="countdown-text">Price increases every Friday until Release</p>
</section>

