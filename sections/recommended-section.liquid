<script>
function setRating(rating, container) {
    const stars = container.querySelectorAll('.star');
    stars.forEach((star, index) => {
        const topStar = star.querySelector('#Star_2');
        if (index + 1 <= rating) {
            topStar.setAttribute('fill', '#FEC84B');
            topStar.removeAttribute('clip-path');
        } else if (index + 0.5 === rating) {
            topStar.setAttribute('fill', '#FEC84B');
            topStar.setAttribute('clip-path', 'url(#clip-half)');
        } else {
            topStar.setAttribute('fill', 'none');
            topStar.removeAttribute('clip-path');
        }
    });
}
// Call setRating function for each star rating container
const starContainers = document.querySelectorAll('.stars-container');
starContainers.forEach(container => {
    const rating = parseFloat(container.getAttribute('data-rating'));
    setRating(rating, container);
});
</script>

